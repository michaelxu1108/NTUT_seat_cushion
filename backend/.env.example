# 應用設定
PROJECT_NAME="NTUT UTL Medical System"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# CORS 設定（允許的來源）
ALLOWED_ORIGINS=["http://localhost","http://localhost:8080","http://localhost:3000"]

# MongoDB 設定
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME="medical_system"

# 或使用 MongoDB Atlas / AWS DocumentDB
# MONGODB_URL="mongodb+srv://username:password@cluster.mongodb.net"

# JWT 設定
SECRET_KEY="your-secret-key-change-this-in-production-use-strong-random-string"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# AWS 設定（可選）
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="ap-northeast-1"
# S3_BUCKET_NAME="your-bucket-name"

# 環境
ENVIRONMENT="development"  # development, staging, production

# 日誌等級
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
